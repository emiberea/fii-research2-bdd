{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>Student list</h1>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Student list - table</h3>
                </div>
                <div class="panel-body">
                    <h3 class="panel-title">Student that are now registered in the system.</h3>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Father initial</th>
                            <th>Pin</th>
                            <th>City</th>
                            <th>Address</th>
                            <th>High school</th>
                            <th>Specialization</th>
                            <th>Admission exam grade</th>
                            <th>Baccalaureate average grade</th>
                            <th>Baccalaureate maximum grade</th>
                            <th>Final grade</th>
                            <th>Created at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('student_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.firstName }}</td>
                            <td>{{ entity.lastName }}</td>
                            <td>{{ entity.fatherInitial }}</td>
                            <td>{{ entity.pin }}</td>
                            <td>{{ entity.city }}</td>
                            <td>{{ entity.address }}</td>
                            <td>{{ entity.highSchool }}</td>
                            <td>{{ entity.specialization }}</td>
                            <td>{{ entity.admissionExamGrade }}</td>
                            <td>{{ entity.baccalaureateAverageGrade }}</td>
                            <td>{{ entity.baccalaureateMaximumGrade }}</td>
                            <td>{{ entity.finalGrade }}</td>
                            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('student_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('student_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="panel-footer">
                    <a href="{{ path('student_new') }}">
                        Create new student
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
