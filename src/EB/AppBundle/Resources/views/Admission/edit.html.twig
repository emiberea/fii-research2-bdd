{% extends '::base.html.twig' %}

{% form_theme edit_form 'EBAppBundle:Form:fields.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h1>Admission edit</h1>
    
            <form action="{{ path('admission_update', {'id': entity.id}) }}" {{ form_enctype(edit_form) }} method="POST" role="form">
                <div class="form-group">
                    {{ form_label(edit_form.sessionDate) }}
                    {{ form_widget(edit_form.sessionDate, {attr: {placeholder: '0.00'}}) }}
                    {{ form_errors(edit_form.sessionDate) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.budgetFinancedNo) }}
                    {{ form_widget(edit_form.budgetFinancedNo, {attr: {placeholder: '0'}}) }}
                    {{ form_errors(edit_form.budgetFinancedNo) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.feePayerNo) }}
                    {{ form_widget(edit_form.feePayerNo, {attr: {placeholder: '0'}}) }}
                    {{ form_errors(edit_form.feePayerNo) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.close) }}
                    {{ form_widget(edit_form.close) }}
                    {{ form_errors(edit_form.close) }}
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-warning'}}) }}
                </div>
                {{ form_rest(edit_form) }}
            </form>
    
            {{ form(delete_form) }}
    
            <a href="{{ path('admission') }}">
                Back to the list
            </a>
        </div>
    </div>
{% endblock %}
